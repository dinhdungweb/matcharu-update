<!-- Step Modal -->
<div id="stepModal" class="step-modal">
  <div class="step-modal__overlay"></div>
  <div class="step-modal__container">
    <div class="step-modal__header">
      <h3 class="step-modal__title" id="modalTitle"></h3>
      <button class="step-modal__close" id="closeModal">
        <svg width="24" height="24" viewBox="0 0 24 24" fill="none">
          <path d="M18 6L6 18M6 6l12 12" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
        </svg>
      </button>
    </div>
    
    <div class="step-modal__content">
      <div class="step-modal__image">
        <img id="modalImage" src="" alt="" loading="lazy">
      </div>
      
      <div class="step-modal__step-info">
        <div class="step-modal__step-number">
          <span id="currentStep">1</span>
          <span class="step-modal__step-divider">/</span>
          <span id="totalSteps">3</span>
        </div>
        
        <div class="step-modal__step-content">
          <h4 class="step-modal__step-title" id="modalStepTitle"></h4>
          <div class="step-modal__step-details" id="modalStepDetails"></div>
          <p class="step-modal__step-description" id="modalStepDescription"></p>
        </div>
      </div>
    </div>
    
    <div class="step-modal__navigation">
      <button class="step-modal__nav-btn step-modal__prev" id="prevStep" disabled>
        <svg width="20" height="20" viewBox="0 0 24 24" fill="none">
          <path d="M15 18l-6-6 6-6" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
        </svg>
        Previous
      </button>
      
      <div class="step-modal__dots" id="stepDots"></div>
      
      <button class="step-modal__nav-btn step-modal__next" id="nextStep">
        Next
        <svg width="20" height="20" viewBox="0 0 24 24" fill="none">
          <path d="M9 18l6-6-6-6" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
        </svg>
      </button>
    </div>
  </div>
</div>

<script>
document.addEventListener('DOMContentLoaded', function() {
  // Collapsible functionality
  const toggles = document.querySelectorAll('.collapsible-method__toggle');
  toggles.forEach(toggle => {
    toggle.addEventListener('click', function() {
      const content = this.nextElementSibling;
      const icon = this.querySelector('.collapsible-method__icon');
      
      if (content.style.display === 'block') {
        content.style.display = 'none';
        icon.style.transform = 'rotate(0deg)';
      } else {
        content.style.display = 'block';
        icon.style.transform = 'rotate(180deg)';
      }
    });
  });

  // Video button functionality
  const videoButtons = document.querySelectorAll('.preparation-method__video-btn, .collapsible-method__video-btn');
  videoButtons.forEach(button => {
    button.addEventListener('click', function() {
      const videoUrl = this.dataset.videoUrl;
      if (videoUrl) {
        window.open(videoUrl, '_blank');
      }
    });
  });

  // Step Modal functionality
  const modal = document.getElementById('stepModal');
  const modalOverlay = document.querySelector('.step-modal__overlay');
  const closeBtn = document.getElementById('closeModal');
  const prevBtn = document.getElementById('prevStep');
  const nextBtn = document.getElementById('nextStep');
  const modalTitle = document.getElementById('modalTitle');
  const modalImage = document.getElementById('modalImage');
  const stepNumber = document.getElementById('stepNumber');
  const stepTitle = document.getElementById('stepTitle');
  const stepDetails = document.getElementById('stepDetails');
  const stepDescription = document.getElementById('stepDescription');
  const stepDots = document.getElementById('stepDots');

  let currentStep = 1;
  let totalSteps = 3;
  let stepData = {};

  // Function to open modal
  function openModal(imageElement) {
    const methodTitle = imageElement.dataset.methodTitle;
    const step = parseInt(imageElement.dataset.step);
    
    // Store step data
    stepData = {
      methodTitle: methodTitle,
      steps: []
    };

    // Collect all step data
    for (let i = 1; i <= 3; i++) {
      const stepKey = i === 1 ? '' : i.toString();
      const titleKey = `step${stepKey}Title`;
      const detailsKey = `step${stepKey}Details`;
      const descriptionKey = `step${stepKey}Description`;
      const imageKey = `step${stepKey}Image`;
      
      stepData.steps.push({
        title: imageElement.dataset[titleKey] || '',
        details: imageElement.dataset[detailsKey] || '',
        description: imageElement.dataset[descriptionKey] || '',
        image: imageElement.dataset[imageKey] || ''
      });
    }

    currentStep = step;
    totalSteps = stepData.steps.filter(s => s.title).length;
    
    updateModalContent();
    createDots();
    modal.style.display = 'block';
    document.body.style.overflow = 'hidden';
  }

  // Function to update modal content
  function updateModalContent() {
    const step = stepData.steps[currentStep - 1];
    
    modalTitle.textContent = stepData.methodTitle;
    stepNumber.textContent = currentStep;
    stepTitle.textContent = step.title;
    stepDetails.textContent = step.details;
    stepDescription.textContent = step.description;
    
    if (step.image) {
      modalImage.src = step.image;
      modalImage.alt = step.title;
      modalImage.style.display = 'block';
    } else {
      modalImage.style.display = 'none';
    }

    // Update navigation buttons
    prevBtn.disabled = currentStep === 1;
    nextBtn.disabled = currentStep === totalSteps;

    // Update dots
    updateDots();
  }

  // Function to create dots
  function createDots() {
    stepDots.innerHTML = '';
    for (let i = 1; i <= totalSteps; i++) {
      const dot = document.createElement('div');
      dot.className = 'step-modal__dot';
      if (i === currentStep) {
        dot.classList.add('step-modal__dot--active');
      }
      stepDots.appendChild(dot);
    }
  }

  // Function to update dots
  function updateDots() {
    const dots = stepDots.querySelectorAll('.step-modal__dot');
    dots.forEach((dot, index) => {
      if (index + 1 === currentStep) {
        dot.classList.add('step-modal__dot--active');
      } else {
        dot.classList.remove('step-modal__dot--active');
      }
    });
  }

  // Function to close modal
  function closeModal() {
    modal.style.display = 'none';
    document.body.style.overflow = '';
  }

  // Event listeners for clickable images
  const clickableImages = document.querySelectorAll('.step-image-clickable');
  clickableImages.forEach(image => {
    image.addEventListener('click', function() {
      openModal(this);
    });
  });

  // Event listeners for modal controls
  closeBtn.addEventListener('click', closeModal);
  modalOverlay.addEventListener('click', closeModal);

  prevBtn.addEventListener('click', function() {
    if (currentStep > 1) {
      currentStep--;
      updateModalContent();
    }
  });

  nextBtn.addEventListener('click', function() {
    if (currentStep < totalSteps) {
      currentStep++;
      updateModalContent();
    }
  });

  // Keyboard navigation
  document.addEventListener('keydown', function(e) {
    if (modal.style.display === 'block') {
      if (e.key === 'Escape') {
        closeModal();
      } else if (e.key === 'ArrowLeft' && currentStep > 1) {
        currentStep--;
        updateModalContent();
      } else if (e.key === 'ArrowRight' && currentStep < totalSteps) {
        currentStep++;
        updateModalContent();
      }
    }
  });
});
</script>

